L_HOL:
   lmap(MAP_HOL,           B,C)
   song(SNG_SADNESS)
   chstep(OVERWORLD,       0x7f,0x7f, 27)
   chstep(OVERWORLD,       0x7f, 24, 27)
   cvstep(OVERWORLD,       0x7f,0x7f, 26)
   cvstep(OVERWORLD,        25,0x7F, 26)

   cstep(hol_inn,           12, 17)
   cstep(hol_hous1,          6, 16)
   cstep(hol_hous2,         20, 16)
   cstep(hol_itemshop,      16,  9)
   cstep(hol_webshop,        6,  5)
   ctres(0x26,IT_HPLO,        4,  5,0x00,SFX_SEARCH)
   ctres(0x27,IT_HPLO,        1, 13,0x00,SFX_SEARCH)
   csearch(hol_sign,         7, 22, S_U)
   csearch(hol_well,        21, 11, S_U)
   csearch(hol_well,        21, 12, S_D)
   csearch(hol_grave,       22,  0, S_U)

   ldude( 4,NPC_DEAD,      0x07,0x0a,DOWN,STAND)
   frame( 4,CEL_SKEL1)
   ldude( 5,NPC_DEAD,      0x0a,0x13,DOWN,STAND)
   frame( 5,CEL_SKEL2)
   ldude( 6,NPC_DEAD,      0x01,0x02,DOWN,STAND)
   frame( 6,CEL_SKEL1)
   ldude( 7,NPC_DEAD,      0x04,0x01,DOWN,STAND)
   frame( 7,CEL_SKEL2)
   ldude( 8,NPC_DEAD,      0x0e,0x0c,DOWN,STAND)
   frame( 8,CEL_SKEL1)
   ldude( 9,NPC_DEAD,      0x15,0x14,DOWN,STAND)
   frame( 9,CEL_SKEL2)
   ldude(10,NPC_DEAD,      0x09,0x11,DOWN,STAND)
   frame(10,CEL_SKEL1)
   ldude(11,NPC_DEAD,      0x06,0x12,DOWN,STAND)
   frame(11,CEL_SKEL2)

   ctalk(hol_dead,4)
   ctalk(hol_dead,5)
   ctalk(hol_dead,6)
   ctalk(hol_dead,7)
   ctalk(hol_dead,8)
   ctalk(hol_dead,9)
   ctalk(hol_dead,10)
   ctalk(hol_dead,11)

   end

