hol_webshop:
   fadeout(X_FADE)
   getxy(B,C)
   lmap(MAP_HOL_WEP,       0x02,0x07)
   colshift(C_BROWN)
   cstep(I_HOL,            0x02,0x08)
   ldude(4,NPC_DEAD,       0x05,0x04,DOWN,STAND)
   frame(4,CEL_SKEL2)
   ldude(5,NPC_DEAD,       0x03,0x04,DOWN,STAND)
   frame(5,CEL_SKEL1)
   ctalk(hol_dead,4)
   ctalk(hol_dead,5)
   csearch(hol_dead,       0x05,0x05,S_U)
