   lmap(MAP_HOL_HOUS1,     0x03,0x06)
   colshift(C_BROWN)
   cstep(I_HOL,            0x03,0x07)
   ldude(4,NPC_DEAD,       0x01,0x02,DOWN,STAND)
   frame(4,CEL_SKEL1)
   ctalk(hol_dead,4)
   fadein(X_FADE)
   end

hol_hous2:
   fadeout(X_FADE)
   getxy(B,C)
   lmap(MAP_HOL_HOUS2,     0x04,0x07)
   colshift(C_BROWN)
   cstep(I_HOL,            0x04,0x08)
   ctres(0x28,IT_ETraveler, 0x01,0x04,0xC4,SFX_CHEST)
