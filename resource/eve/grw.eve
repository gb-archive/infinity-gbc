grw_ftreeload:
   ldude(4,EN_TREE1, 0x26,0x07,DOWN,STAND)
   ldude(5,EN_TREE1, 0x26,0x08,DOWN,STAND)
   ldude(6,EN_TREE1, 0x27,0x07,DOWN,STAND)
   ldude(7,EN_TREE1, 0x27,0x08,DOWN,STAND)
   call(grw_ftree1)

grw_ftree1:
   frame(4,0)
   frame(5,1)
   frame(6,2)
   frame(7,3)
   end

grw_ftree2:
   frame(4,4)
   frame(5,5)
   frame(6,6)
   frame(7,7)
   end

