O_GRW:
   fadeout(X_ROLL)
   face(0,RIGHT)
   set(D,0x01)
   set(E,0x10)
   set(G,X_ROLL)
   song(SNG_FOREST)

   ; set zone
   set(F,ZONE_GRW)
   get(A,VAR_RET_TUR)
   if(A,CNE,3,grw_firstzone);
   set(F,ZONE_GRW2)
grw_firstzone:

   call(grw_part1_nf)

   get(A,VAR_RET_TUR)
   if(A,CE,0,GRET)
   if(A,CE,3,grw_scene41)

   ; victor doesnt want to go here
   sleep(16)
   say(GRW_STXT5)
   sleep(16)
   walk(0,LEFT,1)
   sync
   goto(grw_part1a)

O_GRW2:
   fadeout(X_ROLL)
   face(0,LEFT)
   set(D,0x31)
   set(E,0x04)
   set(G,X_ROLL)
   song(SNG_FOREST)
   goto(grw_part1_nf)

; tres - 0x49
grw_part1:
   fadeout(X_FADE)
   set(G,X_FADE)
grw_part1_nf:
   lmap(MAP_GRW,        D,E)
   zone(F)
   cvstep(grw_part1a,   0x00,0x0f,0x03)
   cvstep(grw_part1b,   0x32,0x04,0x02)

   cvstep(grw_vict1,    0x04,0x0f,0x03)
   cstep( grw_vict2,    0x09,0x26)
   chstep(grw_vict3,    0x14,0x0a,0x02)
   cvstep(grw_treeboss, 0x27,0x09,0x04)

   ctres(0x23,IT_PHunter,0x04,0x04,0x49,SFX_CHEST)
   ctres(0x24,IT_EThorn, 0x0b,0x1d,0x49,SFX_CHEST)
   ctres(0x25,IT_LGolden,0x1c,0x2b,0x49,SFX_CHEST)

   fadein(G)
   end
grw_part1a:
   set(B,0x48)
   set(C,0x3d)
   goto(OVER_WARP)
grw_part1b:
   ;set(B,0x4f)
   ;set(C,0x39)
   ;goto(OVER_WARP)
   fadeout(X_FADE)
   song_off
   say(MSG_END)
   song(SNG_ALUTHA)
   lock


grw_vict1:
   get(A,VAR_GRW)
   if(A,CG,0,GRET)

   getxy(B,C)
   align(B,C)
   sync

   group
   sync
   partyarr
   detach

   walk(2,RIGHT,1)
   sync
   face(2,LEFT)
   face(0,RIGHT)
   sleep(16)

   say(GRW_STXT1)
   sleep(8)
   walk(2,LEFT,1)
   sync

   reform

   put(1,VAR_GRW)
   end
